<odoo>
    <record id="product_product_view_form_easy_inherited_lps" model="ir.ui.view">
        <field name="name">product.product.view.form.easy.inherited.lps</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_variant_easy_edit_view"/>
        <field name="arch" type="xml">
            <field name="currency_id" position="before">
                <div class="o_row">
                    <label for="last_sale_price"/>
                    <field name="last_sale_price" string="Last Sale Price" class="o_row" widget="monetary"/>
                </div>
            </field>
            <field name="currency_id" position="before">
                <div class="o_row">
                    <label for="last_cost_price"/>
                    <field name="last_cost_price" string="Last Cost Price" class="o_row" widget="monetary"/>
                </div>
            </field>
        </field>
    </record>
</odoo>
