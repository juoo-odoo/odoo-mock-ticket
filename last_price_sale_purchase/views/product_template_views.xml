<odoo>
    <record id="product_template_view_form_lps_purchase" model="ir.ui.view">
        <field name="name">product.template.common.form.inherited.lps</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <div name="pricing" position="after">
                <field name="last_sale_price" string="Last Sale Price" class="o_row" widget="monetary"/>
            </div>
            <div name="pricing" position="after">
                <field name="last_cost_price" string="Last Cost Price" class="o_row" widget="monetary"/>
            </div>
        </field>
    </record>
</odoo>
